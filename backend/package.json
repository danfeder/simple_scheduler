{
  "name": "school-scheduler-backend",
  "version": "1.0.0",
  "description": "Backend server for the school scheduling system",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn src/server.ts",
